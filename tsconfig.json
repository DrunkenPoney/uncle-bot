{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "DOM",
      "ScriptHost",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "target": "esnext",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "alwaysStrict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    //        "strictNullChecks": true,
    //        "strictFunctionTypes": true,
    "outDir": "out"
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules"
  ]
}