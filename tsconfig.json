{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "lib": [
            "ES5",
            "ES6",
            "ES7",
            "ScriptHost",
            "es2015",
            "es2016",
            "es2017",
            "esnext"
        ],
        "allowJs": false,
        "outDir": "./out",
        "rootDir": "./src",
        "moduleResolution": "node",
        "typeRoots": [
            "node_modules/@types",
            "node_modules/types"
        ],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules",
        "docs"
    ]
}