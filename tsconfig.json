{
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": [
      "ES5",
      "ES6",
      "ES7",
      "ScriptHost",
      "es2015",
      "es2016",
      "es2017",
      "esnext"
    ],
    "allowJs": false,
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    "docs"
  ]
}